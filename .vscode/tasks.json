{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "javac-algs4",
            "type": "shell",
            "command": "javac-algs4 ${file}",
            "group": "build"
        },
        {
            "taskName": "verify",
            "type": "shell",
            "command": "mvn -B verify",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "test",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test"
        }
    ]
}